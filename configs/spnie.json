{
  "dataset_reader": {
    "target_namespace": "bert",
    "type": "copy_seq2seq",
    "source_tokenizer": {
      "type": "pretrained_transformer",
      "model_name": "./bert-base-cased",
      "start_tokens": [],
      "end_tokens": [],
      "do_lowercase": false
    },
    "target_tokenizer": {
      "type": "pretrained_transformer",
      "model_name": "./bert-base-cased",
      "start_tokens": [],
      "end_tokens": [],
      "do_lowercase": false
    },
    "source_token_indexers": {
      "tokens": {
        "type": "pretrained_transformer",
        "model_name": "./bert-base-cased",
        "do_lowercase": false,
        "namespace": "bert"
      }
    },
    "bert": true,
    "lazy": true,
    "max_tokens": 70,
    "max_extractions": 10
  },
  "validation_dataset_reader": {
    "type": "copy_seq2seq",
    "bert": true,
    "lazy": true,
    "validation": true,
    "max_extractions": 10,
    "max_tokens": 100,
    "source_token_indexers": {
        "tokens": {
            "type": "pretrained_transformer",
            "do_lowercase": false,
            "model_name": "./bert-base-cased",
            "namespace": "bert"
        }
    },
    "source_tokenizer": {
        "type": "pretrained_transformer",
        "do_lowercase": false,
        "end_tokens": [],
        "model_name": "./bert-base-cased",
        "start_tokens": []
    },
    "target_namespace": "bert",
    "target_tokenizer": {
        "type": "pretrained_transformer",
        "do_lowercase": false,
        "end_tokens": [],
        "model_name": "./bert-base-cased",
        "start_tokens": []
    }
  },
  "vocabulary": {
  "directory_path": "data/vocab/bert"
  },
  "train_data_path": "data/train/oie4_extractions.tsv",
  "validation_data_path": "data/test/carb_sentences.txt",
  "model": {
    "type": "copy_seq2seq_spnie",
    "bert": true,
    "set_attention_mode": "self-attention",
    "loss_func": "log",
    "num_generated_triples": 10,
    "source_namespace": "bert",
    "target_namespace": "bert",
    "token_based_metric": {"type": "carb", "dev_set": "test"},
    "source_embedder": {
      "token_embedders": {
        "tokens": {
          "type": "pretrained_transformer",
        "model_name": "./bert-base-cased",
          "requires_grad": true
        }
      }
    },
    "encoder": {
      "type": "feedforward",
      "feedforward": {
       "input_dim": 768,
       "num_layers": 1,
       "hidden_dims": [128],
       "dropout": 0.1,
       "activations": ["relu"]
      }
    },
    "set_decoder_layers": 3,
    "decoder_layers": 1,
    "target_embedding_dim": 100,
    "beam_size": 5,
    "max_decoding_steps": 70
  },
  "validation_iterator": {
        "type": "basic",
        "batch_size": 30
  },

  "iterator": {
    "type": "basic",
    "batch_size" : 4,
    "maximum_samples_per_batch": ["num_tokens", 1000],
    "max_instances_in_memory": 1000
  },
  "trainer": {
    "num_epochs": 20,
    "optimizer": {
      "type": "bert_adam",
      "parameter_groups": [
              [["source_embedder"], {"lr": 1e-5, "t_total": 50000, "warmup": 0.1}],
              [["^((?!source_embedder).)*$"], {"lr": 2e-5}]
      ],
      "lr": 2e-5
    },
    "learning_rate_scheduler": {
      "type": "cosine",
      "t_initial": 5
    },
    "num_serialized_models_to_keep": 2
  }
}